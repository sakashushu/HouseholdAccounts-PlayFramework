# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Import CRUD routes
# GET     /admin/?                                Admin.index
# *       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure


# DailyAccount
GET     /dailyAccount/{intBasisDate}            DailyAccount.dailyAccountDisp
GET     /dailyAccount                           DailyAccount.dailyAccountDisp
#POST    /dailyAccount/{intBasisDate}            DailyAccount.dailyAccountDisp
POST    /dailyAccount                           DailyAccount.dailyAccountDisp
#POST    /dailyAccount/{intBasisDate}            DailyAccount.jump
#POST    /dailyAccount                           DailyAccount.jump

# BalanceTable
GET     /balanceTable/{intBasisDate}            DailyAccount.balanceTableDisp
#GET     /balanceTable                           DailyAccount.balanceTableDisp


# RecordEdit new
GET     /data/myData/{id}                       RecordEdit.recordEdit
GET     /data/new                               RecordEdit.recordEdit
POST    /data/myData/{id}                       RecordEdit.save_rec
POST    /data/new                               RecordEdit.save_rec

# WebSocket detailList
POST	/detailList                             DetailList.detailList
GET		/detailList	                            DetailList.detailList
WS      /detailList                             DetailList.WebSocketApp.listen
GET		/detailList/remainderBank	            DetailList.dl_remainderBank

# Config
GET     /config/bank/list                       Config.cf_bank_list
GET     /config/bank/myBank/{id}                Config.cf_bank_edit
GET     /config/bank/new                        Config.cf_bank_edit
POST    /config/bank/myBank/{id}                Config.cf_bank_save
POST    /config/bank/new                        Config.cf_bank_save
GET     /config/card/list                       Config.cf_creca_list
GET     /config/card/myCard/{id}                Config.cf_creca_edit
GET     /config/card/new                        Config.cf_creca_edit
POST    /config/card/myCard/{id}                Config.cf_creca_save
POST    /config/card/new                        Config.cf_creca_save
GET     /config/emoney/list                     Config.cf_emoney_list
GET     /config/emoney/myEmoney/{id}            Config.cf_emoney_edit
GET     /config/emoney/new                      Config.cf_emoney_edit
POST    /config/emoney/myEmoney/{id}            Config.cf_emoney_save
POST    /config/emoney/new                      Config.cf_emoney_save
GET     /config/itemIn/list                     Config.cf_item_in_list
GET     /config/itemIn/myItem/{id}              Config.cf_item_in_edit
GET     /config/itemIn/new                      Config.cf_item_in_edit
POST    /config/itemIn/myItem/{id}              Config.cf_item_in_save
POST    /config/itemIn/new                      Config.cf_item_in_save
GET     /config/itemOut/list                    Config.cf_item_out_list
GET     /config/itemOut/myItem/{id}             Config.cf_item_out_edit
GET     /config/itemOut/new                     Config.cf_item_out_edit
POST    /config/itemOut/myItem/{id}             Config.cf_item_out_save
POST    /config/itemOut/new                     Config.cf_item_out_save
GET     /config/ioData                          Config.cf_io

# WebSocket Demo
GET     /smplecho                               SmplEcho.demo
WS      /smplecho                               SmplEcho.WebSocketEcho.listen


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
